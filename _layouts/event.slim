      span
        strong Organizer
        a href="{{ page.event.organizer.url }}" title="{{ page.event.organizer.name }}"
          | {{ page.event.organizer.name }}

      span
        a href="{{ page.event.url }}" title="More Info" More Info
    
    section
      | {{ content }}


script type="text/javascript" src="https://maps.googleapis.com/maps/api/js?key=AIzaSyBW9PaLmfLbvH2IhK4S0JAOrsa7XfQ55vY&sensor=false"
javascript:
  function initialize() {
    var geocoder = new google.maps.Geocoder();
    geocoder.geocode({ 'address': "Charilou Trikoupi 18, 5th floor, Athens, Greece" },
      function(results, status) {
      if (status != google.maps.GeocoderStatus.OK) {
        return;
      }
      var location = results[0].geometry.location
      var mapOptions = {
        center: location,
        zoom: 14,
        disableDefaultUI: true
      };
      var map = new google.maps.Map(document.getElementById("map-stage"), mapOptions);

      map.setCenter(location)
      var marker = new google.maps.Marker({
        position: location,
        title: "Stone Soup",
        animation: google.maps.Animation.DROP,
        icon: "/images/Stone-Soup-Logo-Map-Icon.png",
        url: "https://maps.google.com?q=Charilou Trikoupi 18, Athens, Greece"
      })
      setTimeout(function() {
        marker.setMap(map)
        google.maps.event.addListener(marker, 'click', function() {
          if(confirm("View Stone Soup on Google Maps?")) {
            window.location.href = marker.url
          }
        })
      }, 1000);
    });
  }
  google.maps.event.addDomListener(window, 'load', initialize);
